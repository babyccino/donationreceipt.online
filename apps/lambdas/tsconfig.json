{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
